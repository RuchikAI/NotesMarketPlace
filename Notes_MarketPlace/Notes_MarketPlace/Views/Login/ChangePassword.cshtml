@model Notes_MarketPlace.Models.ChangePassModel
<!DOCTYPE html>
<html lang="en">


<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">

    <title>Login - NoteMarketPlace</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Font-Awesome/css/font-awesome.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">

    <link rel="stylesheet" href="~/Content/Bootstrap/r.css">
    <link rel="stylesheet" href="~/Content/style1.css">
    <link rel="stylesheet" href="~/Content/Responsive-front.css">

    <body>
        <section id="login-page">

            <div class="login-bg img-responsive">
            </div>
            <div class="container">
                <div class="content-box-cp">
                    <div class="f-img text-center">

                        <img src="~/Content/Front_Images/images/top-logo.png" class="img-responsive">

                    </div>

                    @using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post))
                    {
                            <div id="form">
                                <div class="login-text text-center f-cp">
                                    <h3>Change Password</h3>
                                    <p>Enter your new password to change your password</p>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputEmail1">Old Password</label>
                                    <div class="input-group l2 show_hide_password1">
                                        @Html.TextBoxFor(x => x.OldPassword, new { @class = "form-control", placeholder = "Enter your old password" })
                                        @Html.ValidationMessageFor(x => x.OldPassword,"", new {@class="text-danger"})

                                        <div class="input-group-addon">
                                            <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1"> New Password</label>
                                    <div class="input-group l2 show_hide_password2">
                                        @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control", placeholder = "Enter your new password" })
                                        @Html.ValidationMessageFor(x => x.NewPassword, "", new { @class = "text-danger" })
                                        <div class="input-group-addon">
                                            <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1"> Confirm Password</label>
                                    <div class="input-group l3 show_hide_password3">
                                        @Html.TextBoxFor(x => x.NewConfirmPassword, new { @class = "form-control", placeholder = "Enter your confirm password" })
                                        @Html.ValidationMessageFor(x => x.NewConfirmPassword, "", new { @class = "text-danger" })
                                        <div class="input-group-addon">
                                            <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center f-cp">
                                    <button type="submit" class="btn btn-primary btn-cp"><span>SUBMIT</span></button>
                                </div>




                            </div>
                       
                    }


                </div>

            </div>
        </section>






        <script src="~/Script/jquery.js"></script>

        <script src="~/Script/bootstrap_js/bootstrap4.min.js">

        </script>

        <script src="~/Script/jquery.validate.min.js"></script>
        <script src="~/Script/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Script/script.js"></script>

    </body>
