@model Notes_MarketPlace.Models.LoginModel
<!DOCTYPE html>
<html lang="en">


<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">

    <title>Login - NoteMarketPlace</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Font-Awesome/css/font-awesome.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">

    <link rel="stylesheet" href="~/Content/Bootstrap/r.css">
    <link rel="stylesheet" href="~/Content/style1.css">
    <link rel="stylesheet" href="~/Content/Responsive-front.css">

</head>

<body>
    <section id="login-page">

        <div class="login-bg img-responsive">
        </div>
        <div class="container">
            <div class="content-box">
                <div class="f-img text-center">
                    <a href="@Url.Action("Home","Home")">
                        <img src="~/Content/Front_Images/images/top-logo.png" class="img-responsive">
                    </a>
                </div>
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <div id="form">
                        <div class="login-text text-center">
                            <h3>Login</h3>
                            <p>Enter your email address and password to login</p>
                            <div class="text-danger">
                                @ViewBag.error;
                            </div>
                        </div>
                        <form>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Email</label>
                                @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control", @placeholder = "Enter your Email ID", @id = "exampleInputEmail1" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group f-pa">
                                <label for="exampleInputPassword1">Password</label>
                                <div class="input-group l1 show_hide_password">
                                    @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "form-control", @placeholder = "Enter your Password" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    <div class="input-group-addon">
                                        <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                                    </div>
                                </div>

                                <label class="text-right" for="forgotpassword"><a href="~/ForgotPassWord" role="button" id="f-pass"><span>Forgot Password?</span></a></label>
                            </div>
                            <div class="form-group form-check">
                                @Html.CheckBoxFor(model => model.RememberMe, new { @name = "RememberMe" })
                                <label class="form-check-label" for="exampleCheck1">Remember Me</label>


                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-login"><span>LOGIN</span></button>
                                <P>Don't have an account? <a href="~/SignUp" role="button"><span>Sign Up</span></a></P>
                            </div>



                        </form>
                    </div>
                }



            </div>

        </div>
    </section>








    <script src="~/Script/jquery.js"></script>

    <script src="~/Script/bootstrap_js/r.js">

    </script>
    
    <script src="~/Script/jquery.validate.min.js"></script>
    <script src="~/Script/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Script/script.js"></script>

</body>
