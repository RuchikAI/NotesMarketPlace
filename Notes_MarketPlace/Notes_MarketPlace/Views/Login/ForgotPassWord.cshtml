@model Notes_MarketPlace.Models.ForgotPasswordModel
<!DOCTYPE html>
<html lang="en">


<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE-edge">

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
    <title>ForgotPassword - NoteMarketPlace</title>

    <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Font-Awesome/css/font-awesome.css">
    <link rel="stylesheet" href="~/Content/Bootstrap/r.css">
    <link rel="stylesheet" href="~/Content/style1.css">
    <link rel="stylesheet" href="~/Content/Responsive-front.css">

</head>

<body>
    <section id="login-page">

        <div class="login-bg img-responsive">
        </div>
        <div class="container">
            <div class="content-box">
                <div class="f-img text-center">

                    <img src="~/Content/Front_Images/images/top-logo.png" class="img-responsive">

                </div>

                @using (Html.BeginForm("ForgotPassWord", "Login", FormMethod.Post))
                {
                    <div id="form">
                        <div class="login-text text-center form-head-fopasa">
                            <h3>Forgot Password?</h3>
                            <p>Enter your email to reset your password</p>
                            <div class="text-success">@ViewBag.Success</div>
                            <div class="text-danger">@ViewBag.error</div>
                            
                        </div>
                        <form>
                            <div class="form-group form-forgot-pass">
                                <label for="exampleInputEmail1">Email</label>
                                @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control", @placeholder = "Enter your email address" })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-forgot-pass"><span>SUBMIT</span></button>
                            </div>

                        </form>
                    </div>
                }


            </div>

        </div>
    </section>








    <script src="~/Script/jquery.js"></script>

    <script src="~/Script/bootstrap_js/r.js">

    </script>
    <script src="~/Script/jquery.validate.min.js"></script>
    <script src="~/Script/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Script/script.js"></script>
</body>
</html>
