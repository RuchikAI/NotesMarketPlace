@model Notes_MarketPlace.Models.ContactModel

@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout_Without_Home.cshtml";
}



<section id="user-profile">
    <div class="c-up">
        <img src="~/Content/User-Profile/banner-with-overlay.jpg" width="100%" class="img-responsive">

        <div class="text-up">
            <h3>Contact Us</h3>
        </div>
    </div>

    @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        <div class="content-box-up">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="contact-heading">
                            <h3 style="font-weight: bold;">Get in Touch</h3>
                            <p>Let us know how to get back to you
                            <p>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6 col-mar">
                        <form>
                            <div class="form-group s3">
                                <label for="exampleInputName">Full Name<span>&#42;</span></label>
                                @Html.TextBoxFor(x => x.FullName, "", htmlAttributes: new { @class = "form-control", @placeholder = "Enter your Full Name" })
                                @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group s3">
                                <label for="exampleInputEmail1">Email Address<span>&#42;</span></label>
                                @Html.TextBoxFor(x => x.EmailID, "", htmlAttributes: new { @class = "form-control", @placeholder = "Enter your Email Address" })
                                @Html.ValidationMessageFor(x => x.EmailID, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group s3">
                                <label for="name">Subject<span>&#42;</span></label><br>
                                @Html.TextBoxFor(x => x.Subject, "", htmlAttributes: new { @class = "form-control", @placeholder = "Enter your Subject" })
                                @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger" })
                            </div>




                        </form>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="exampleFormControlTextarea3">Comments/Questions<span>&#42;</span></label>
                            @Html.TextAreaFor(x => x.Comments, htmlAttributes: new { @class = "form-control", rows = "9", @placeholder = "Comments....." })
                            @Html.ValidationMessageFor(x => x.Comments, "", new { @class = "text-danger" })
                        </div>


                    </div>
                </div>
                <div class="row">

                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary btn-contact"><span>SUBMIT</span></button>
                    </div>
                </div>





            </div>
        </div>
    }


</section>



